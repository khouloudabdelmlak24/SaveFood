<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.ModifierReclamationController"
            style="-fx-background-color: linear-gradient(to bottom right, #eef2f7, #d9e4f5);">

    <top>
        <VBox spacing="15" style="-fx-padding:25;">
            <Label text="Modifier RÃ©clamation"
                   style="-fx-font-size:24px;
                          -fx-font-weight:bold;
                          -fx-text-fill:#2c3e50;" />
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER"
              style="-fx-padding:40;">

            <TextField fx:id="typeField" promptText="Type"
                       prefWidth="350"
                       style="-fx-background-radius:20;
                              -fx-border-radius:20;
                              -fx-border-color:#3498db;" />

            <TextField fx:id="sujetField" promptText="Sujet"
                       prefWidth="350"
                       style="-fx-background-radius:20;
                              -fx-border-radius:20;
                              -fx-border-color:#3498db;" />

            <TextArea fx:id="descriptionArea"
                      promptText="Description"
                      prefWidth="350"
                      prefHeight="120"
                      style="-fx-background-radius:20;
                             -fx-border-radius:20;
                             -fx-border-color:#3498db;" />

            <TextField fx:id="statutField"
                       promptText="Statut"
                       prefWidth="350"
                       style="-fx-background-radius:20;
                              -fx-border-radius:20;
                              -fx-border-color:#3498db;" />

            <HBox spacing="20" alignment="CENTER">

                <Button text="Modifier"
                        onAction="#modifierReclamation"
                        style="-fx-background-color:#3498db;
                               -fx-text-fill:white;
                               -fx-background-radius:20;
                               -fx-padding:10 25 10 25;" />

                <Button text="Supprimer"
                        onAction="#supprimerReclamation"
                        style="-fx-background-color:#e74c3c;
                               -fx-text-fill:white;
                               -fx-background-radius:20;
                               -fx-padding:10 25 10 25;" />

            </HBox>

        </VBox>
    </center>

</BorderPane>
